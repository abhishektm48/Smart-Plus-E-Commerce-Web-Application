<section>
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="container mt-5 pl-5">
                <h2 class="text-center">Admin Login</h2>
                <form action="admin/admin-login" method="post">
                    {{#if adminloginErr}}
                    <p class="error">{{adminloginErr}}</p>
                    {{/if}}
                    <div class="form-group pt-3">
                        <label for="exampleInputEmail1">Username</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter the Username">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div>
                        <a href="/admin-signup">Create New Account ?</a>
                    </div>
                    <button type="submit" class="btn btn-success mt-2">Login</button>
                </form>
            </div>
        </div>
    </div>
</section>