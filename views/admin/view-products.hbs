<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mb-4 ">Add Product</a>
        </div>
        <table class="table main-table-styles" id="productsTable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th>Image</th>
      <th>Edit</th>
      <th>Delete</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.pname}}</td>
      <td>{{this.category}}</td>
      <td>{{this.des}}</td>
      <td>{{this.price}}</td>
      <td><img style="width:50px;height:50px;" src="/product-images/{{this._id}}.jpg"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick=" return confirm('Are you want to delete {{this.pname}}?')">Delete</a></td> 
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>

<script>
  $(function()
  {
    $('#productsTable').DataTable();
  });
</script>