<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
            <a class="navbar-brand text-light" href="/">Shopping Cart</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-light" href="/">Products <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/cart">Cart<span class="badge badge-success"
                                id="cart-count">{{cartCount}}</span></a>
                    </li>
                    {{#if user}}
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Orders</a>
                    </li>
                    {{/if}}

                </ul>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{#if user}}
                        {{user.username}}
                        {{else}}
                        Account
                        {{/if}}

                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {{#if user}}
                        <a class="dropdown-item" href="logout">Logout</a>
                        {{else}}
                        <a class="dropdown-item" href="login">Login</a>
                        {{/if}}


                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container-fluid">
          <div class="container">
          <div class="row">
            <div class="col-12">
              <nav class="main-nav">
                <!-- ***** Logo Start ***** -->
                <a href="/" class="logo">
                  <h4>Smart<span>Plus</span></h4>
                </a>
                <!-- ***** Logo End ***** -->
                <!-- ***** Menu Start ***** -->
                <ul class="nav">
                  <li class="scroll-to-section"><a href="/" class="active">Products<span class="sr-only">(current)</span></a></li>
                  <li class="scroll-to-section"><a href="/cart">Cart<span class="badge badge-success"
                                id="cart-count">{{cartCount}}</span></a></li>
                   {{#if user}}             
                  <li class="scroll-to-section"><a href="#">Orders</a></li>
                  {{/if}}
                </ul>        
                <div class="dropdown">
                  <button onclick="myFunction()" class="dropbtn">
                  {{#if user}}
                  {{user.username}}
                  {{else}}
                  Account
                  {{/if}}
                  </button>
                  <div id="myDropdown" class="dropdown-content">
                    {{#if user}}
                    <a href="logout">Logout</a>
                    {{else}}
                    <a href="login">Login</a>
                    {{/if}}
                  </div>
                </div>
                <!-- ***** Menu End ***** -->
              </nav>
            </div>
          </div>
        </div>
        </div>
      </header>

      
    

