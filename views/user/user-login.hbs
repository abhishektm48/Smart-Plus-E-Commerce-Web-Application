<section>
    <div class="col-md-12 img">
        <div class="col-md-6 m-auto">
            <div class="container mt-5 pl-5 form-box">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post">
            {{#if loginErr}}
            <p class="error">{{loginErr}}</p>
            {{/if}}
                <div class="form-group pt-3">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter email" required>
                    <small id="emailHelp" class="form-text" style="color: black;">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <div>
               <a href="/signup" style="text-decoration: none; color:black;">Create New Account ?</a>
               </div>
                <button type="submit" class="btn mt-2" style="background: linear-gradient(105deg, rgb(15, 8, 116) 0%, rgb(8, 57, 97) 100%);color:#fff">Login</button>
                </form>
            </div>
        </div>
    </div>
</section>