<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-3 p-3">
        <div class="card" style="width: 15rem; height:24rem; border:4px solid rgb(74, 206, 155); border-radius:10px;">
          <img class="card-img-top"
           style="height:11rem; width:10rem;"
            src="/product-images/{{this._id}}.jpg"
             alt="Card image cap">
          <div class="card-body bg-info">
            <h5 class="card-title">{{this.pname}}</h5>
            <p class="card-text">Rs.{{this.price}}</p>
            <p class="card-text">{{this.des}}</p>
           <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add To Cart</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

